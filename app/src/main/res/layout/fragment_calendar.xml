<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment"
    android:background="@color/background_color">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:firstDayOfWeek="2"
        app:eventsEnabled="true"
        app:headerColor="@color/dark_red"
        app:abbreviationsBarColor="@color/calendar_abbreviations_bar"
        app:abbreviationsLabelsColor="@color/black"
        app:highlightedDaysLabelsColor="@color/dark_red"
        app:todayLabelColor="@color/dark_red"

        />

</androidx.constraintlayout.widget.ConstraintLayout>