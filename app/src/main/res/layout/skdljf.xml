<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/dark_red"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="start"
            >

            <TextView
                android:id="@+id/noteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteName"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteDescription"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteDateStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteDateStart"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteTimeStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteTimeStart"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteDateFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteDateFinish"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteTimeFinish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteTimeFinish"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/noteID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="noteID"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>